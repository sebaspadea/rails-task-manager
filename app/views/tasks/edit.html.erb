<div class="container">
  <h1 class="titulo text-center" >Edit task!</h1>
  <div class="form-group">
      <%= form_for(@task) do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= f.label :title %>
        <%= f.text_field :title,class:"form-control" %>
        <%= f.label :details %>
        <%= f.text_area :details,class:"form-control mb-4" %>
        <%= f.submit class:"btn btn-dark"  %>
      <% end %>
      <%= link_to "GO BACK", tasks_path, class:"btn btn-dark mt-3" %>
    </div>
</div>
